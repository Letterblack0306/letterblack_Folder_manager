<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allows the app to run JavaScript and other dynamic code -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Allows loading of unsigned libraries (needed for Electron) -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- Allows outgoing network connections -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- Allows reading from user-selected files -->
    <key>com.apple.security.files.user-selected.read-only</key>
    <true/>
    
    <!-- Allows writing to user-selected files -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Allows accessing Downloads folder -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>
    
    <!-- Allows sending Apple Events (for launching applications) -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>
    
    <!-- Disable App Sandbox (required for full file system access) -->
    <key>com.apple.security.app-sandbox</key>
    <false/>
    
    <!-- Allow JIT compilation (JavaScript engines) -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    
    <!-- Allow dynamic linking -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>
</dict>
</plist>
