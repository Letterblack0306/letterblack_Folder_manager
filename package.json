{
  "name": "folder-manager",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:mac": "electron-builder --mac dmg"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {},
  "build": {
    "appId": "com.letterblack.foldermanager", 
    "productName": "Folder Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js", 
      "index.html",
      "styles.css",
      "settings.json",
      "folders.json"
    ],
    "mac": {
      "target": "dmg"
    }
  }
}
