{
  "name": "folder-manager",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac dmg",
    "build:win": "electron-builder --win nsis",
    "build:linux": "electron-builder --linux AppImage"
  },
  "author": "LetterBlack",
  "license": "MIT",
  "description": "Quick Folder Launcher",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.letterblack.foldermanager",
    "productName": "Folder Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "settings.json",
      "assets/**/*"
    ],
    "mac": {
      "icon": "assets/icon.svg",
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
    "win": {
      "icon": "assets/icon.svg",
      "target": "nsis"
    },
    "linux": {
      "icon": "assets/icon.svg",
      "target": "AppImage"
    }
  }
}
